{
    "extends": "airbnb-base",
    "plugins": [
        "import",
        "promise",
        "mocha"
    ],
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "indent": ["error", 4],
        "no-use-before-define": 0,
        "no-param-reassign": 0,
        "consistent-return": 0,
        "array-callback-return": 0,
        "arrow-body-style": 0,
        "no-plusplus": 0,
        "strict": ["error", "global"],
        "max-len": ["error", 150],
        "func-names": 0,
        "import/prefer-default-export": 0,
        "import/no-absolute-path": 0,
        "import/no-extraneous-dependencies": ["error", { "devDependencies": ["**/test/*.js"] }],
        "no-underscore-dangle": 0,
        "arrow-parens": 0,
        "no-console": 0
    }
}
